doctype html
html
  head
    meta(charset='utf8')
    title main page
    link( rel='stylesheet' type='text/css' href='/mainstyle.css')
  body
    div(class='container')
      header(class='container_header')
        h1(class='container_header_h1')
          a(href='/main' class='container_header_h1_a') 게시판
          div(class='container_header_div')

      section(class='content_login')
        div(class='login_form')
          form(action='/user/login' method='post')
            div(class='login_input_div')
              div(class='login_input_div2')
                input(type='text' name='user_id' placeholder='id' class='login_input')
                input(type='password' name='user_password' placeholder='password' class='login_input')

              input(type='submit' value='로그인' class='login_button')
            p

                a(href='/user/join') 회원가입
          main(class='main_from')
